<h1><%= @user.full_name %>のページ</h1>
<p>
  <strong>ユーザー名：</strong>
  <%= @user.full_name %>
</p>
<p>
  <strong>メールアドレス：</strong>
  <%= @user.email %>
</p>

<%= link_to 'ユーザー情報編集', edit_admin_user_path(@user.id) %><br>
<%= link_to '管理画面へ戻る', admin_users_path %>
<hr>

<button type="button" class="btn btn-warning"><%= link_to "新規投稿",new_task_path %></button>

<%= link_to '終了期限で並べ替える', tasks_path(sort_expired: "true") %><br>
<%= link_to '優先順位で並べ替える', tasks_path(sort_priority: "true") %><br>

<h1><%= @user.full_name %>のTask一覧</h1>
<table class="table table-bordered">
  <tr>
    <th>ユーザー名</th>
    <th>タスク名</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先順位</th>
    <th>ラベル</th>
  </tr>
  <% @user.tasks.each do |task| %>
    <tr>
      <td><%= task.user.full_name %></td>
      <td><%= task.name %></td>
      <td><%= task.description %></td>
      <td class="expiration_date"><%= l(task.expiration_date, format: :long) %></td>
      <td class="status"><%= task.status %></td>
      <td class="priority"><%= task.priority %></td>
      <td><%= link_to '詳細', task_path(task.id), class:"btn btn-primary btn-xs" %></td>
      <td><%= link_to "編集", edit_task_path(task.id), class:"btn btn-success btn-xs" %></td>
      <td><%= link_to '削除', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class:"btn btn-danger btn-xs" %></td>
    </tr>
  <% end %>
</table>