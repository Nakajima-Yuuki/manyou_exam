<h1>管理画面<h1>
<h3>ユーザー一覧</h3>
<table class="table table-bordered">
<td><button type="button" class="btn btn-default"><%= link_to '新規ユーザー登録', new_admin_user_path %></button></td>
<td><button type="button" class="btn btn-default"><%= link_to 'タスク一覧画面へ戻る', tasks_path %></td>
<hr>

  <tr>
    <th>User_ID</th>
    <th>ユーザー名</th>
    <th>管理者</th>
    <th>タスク数</th>
    <th colspan="3"></th>
    </tr>
  <% @users.each do |user| %>
  <tr class="user_name">
    <td><%= user.id %></td>
    <td><%= user.full_name %></td>
    <td><%= user.admin %></td>
    <td><%= user.tasks.count %></td>
    <td><%= link_to '詳細', admin_user_path(user.id), class:"btn btn-primary btn-xs" %></td>
    <td><%= link_to '編集', edit_admin_user_path(user.id), class:"btn btn-success btn-xs" %></td>
    <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか?' } ,class:"btn btn-danger btn-xs"%></td>
  </tr>
  <% end %>
</table>